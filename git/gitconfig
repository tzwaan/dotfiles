[user]
	name = Tijmen Zwaan
	email = tijmen.zwaan@gmail.com

[auto]
    color = true

[ui]
    color = auto

[core]
    excludefile = ~/dotfiles/git/gitignore_global
    editor = vim

[help]
    autocorrect = 1

[push]
    default = current
    followTags = true

[status]
    showUntrackedFiles = all

[alias]
    current = rev-parse --abbrev-ref HEAD
    remote-diff = !CURRENT=$(git current) && git diff $CURRENT..$1/$CURRENT
    overwrite = !CURRENT=$(git current) && git push origin origin/$CURRENT --force-with-lease
